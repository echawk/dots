
alt + shift + q
	bspc node -c

alt + shift + r
	bspc wm -r

alt + {h, j, k, l}
	bspc node -f {west, south, north, east}

alt + shift + {h, j, k, l}
	bspc node -s {west, south, north, east}

alt + t
	togglespawnmode

alt + f
	bspc node -t fullscreen

alt + shift + space
	bspc node -t floating

alt + {1-9}
	bspc desktop -f {1-9}

alt + shift + {1-9}
	bspc node -d {1-9}

